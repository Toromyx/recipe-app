{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": true,
    "strict": true,
    "removeComments": true,
    "sourceMap": true,
    "preserveConstEnums": false,
    "types": ["svelte", "vite/client"]
  },
  "include": ["./src/**/*.ts"]
}
